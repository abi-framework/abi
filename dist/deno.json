{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "exclude": ["build/"],
    "rules": { "tags": ["recommended"] }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": ["build/"]
  },
  "lock": false,
  "nodeModulesDir": false,
  "test": { "exclude": ["build/"] },
  "tasks": {
    "apply": "deno fmt && deno lint",
    "check": "deno fmt --check && deno check **/*.ts",
    "start": "deno run -A --unstable-kv --unstable-cron start.ts"
  },
  "exclude": ["**/build/*"],
  "imports": {
    "@/": "./",
    "$std/": "https://deno.land/std@0.219.0/"
  }
}
