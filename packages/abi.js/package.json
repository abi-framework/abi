{
  "name": "abi.js",
  "version": "0.0.0",
  "private": false,
  "sideEffects": false,
  "type": "module",
  "engines": {
    "bun": ">=1.1.24",
    "npm": "prefer using bun"
  },
  "packageManager": "bun@1.1.24",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://abi.js.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/abi-js/abi",
    "directory": "packages/abi.js"
  },
  "bugs": "https://github.com/abi-js/abi/issues",
  "author": {
    "name": "Sigui Kess√© Emmanuel",
    "email": "siguici@proton.me",
    "url": "https://siguici.deno.dev/"
  },
  "files": ["src"],
  "keywords": ["router", "server", "handler", "resolver", "middleware"],
  "scripts": {
    "test": "bun test",
    "build": "bun run build.node && bun run build.deno",
    "build.node": "bun run clear.node && tsc --build",
    "build.deno": "bun run clear.deno && pnpm denoify",
    "clear": "bun run clear.node && bun run clear.deno",
    "clear.node": "rimraf js && rimraf ts",
    "clear.deno": "rimraf jsr/*",
    "denoify": "denoify --out jsr"
  },
  "workspaces": ["packages/*"],
  "devDependencies": {
    "@types/bun": "^1.1.6",
    "@types/node": "^22.4.0",
    "denoify": "^1.6.13",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "buno.js": "^0.1.10"
  }
}
