{
  "name": "abi.js",
  "version": "0.0.0",
  "private": false,
  "sideEffects": false,
  "type": "module",
  "engines": {
    "node": ">=20.16",
    "npm": "prefer using pnpm",
    "pnpm": ">=9.7"
  },
  "packageManager": "pnpm@9.7.0",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://abi.js.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/abi-js/abi",
    "directory": "packages/abi.js"
  },
  "bugs": "https://github.com/abi-js/abi/issues",
  "author": {
    "name": "Sigui Kess√© Emmanuel",
    "email": "siguici@proton.me",
    "url": "https://github.com/siguici"
  },
  "files": ["src"],
  "keywords": ["router", "server", "handler", "resolver", "middleware"],
  "scripts": {
    "test": "bun test",
    "build": "pnpm build.node && pnpm build.deno",
    "build.node": "pnpm clear.node && tsc --build",
    "build.deno": "pnpm clear.deno && pnpm denoify",
    "clear": "pnpm clear.node && pnpm clear.deno",
    "clear.node": "rimraf js && rimraf ts",
    "clear.deno": "rimraf jsr/*",
    "denoify": "denoify --out jsr"
  },
  "devDependencies": {
    "@types/bun": "^1.1.6",
    "@types/node": "^22.2.0",
    "denoify": "^1.6.13",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4"
  }
}
